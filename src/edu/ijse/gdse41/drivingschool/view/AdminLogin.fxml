                  <Font name="System Bold" size="15.0" />
               </font>
            </JFXTextField>
            <JFXPasswordField fx:id="txtPassword" focusColor="WHITE" labelFloat="true" layoutX="576.0" layoutY="372.0" onAction="#passLoginKey" prefHeight="29.0" prefWidth="280.0" promptText="Password">
