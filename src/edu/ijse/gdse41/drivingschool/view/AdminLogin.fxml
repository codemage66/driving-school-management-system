                  <Insets right="5.0" />
               </padding>
            </HBox>
            <Button fx:id="bttBack" layoutX="5.0" layoutY="5.0" mnemonicParsing="false" onAction="#bttBackClicked" prefHeight="40.0" prefWidth="40.0" styleClass="backButt" />
